@model Lab1DBwithASP.Models.ApartmentModel

@{
    ViewData["Title"] = "CreateForm";
}

<h1>Add new appartment</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" style="max-width:40%">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="First" class="control-label"></label>
                <input asp-for="First" class="form-control" />
                <span asp-validation-for="First" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Additional" class="control-label"></label>
                <input asp-for="Additional" class="form-control" />
                <span asp-validation-for="Additional" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Paid" class="control-label"></label>
                <input asp-for="Paid" class="form-control" />
                <span asp-validation-for="Paid" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Year" class="control-label"></label>
                <input asp-for="Year" class="form-control" />
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>
            <div class="form-group">
                <br />
                <input type="submit" value="Create" class="btn btn-primary" /> @*<a asp-action="Index">Back to List</a>*@
                <a class="btn btn-secondary" href="/Apartment/Index/?year=@DateTime.Now.Year" role="button">Back to List</a>
            </div>
        </form>
    </div>
</div>

<div>
    
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
